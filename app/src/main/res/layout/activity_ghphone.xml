<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/setting_title"
        layout="@layout/comm_title_layout" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="姓名"
            android:textColor="@color/content"/>

        <TextView
            android:id="@+id/ghp_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:hint="        张三"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/text"
            android:textSize="14dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/gary_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="身份证"
            android:textColor="@color/content"/>

        <EditText
            android:id="@+id/edit_sfz"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@color/gary_bg"
            android:gravity="center_vertical"
            android:hint="    请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/text"
            android:textSize="14dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/gary_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="新手机号"
            android:textColor="@color/content"/>

        <EditText
            android:id="@+id/edit_new_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@color/gary_bg"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/text"
            android:textSize="14dp"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_verification"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/gary_bg"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="验证码"
            android:textColor="@color/content"/>

        <EditText
            android:id="@+id/edit_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/txt_get_verification"
            android:layout_toRightOf="@+id/txt_verification"
            android:background="@color/gary_bg"
            android:gravity="center_vertical"
            android:hint="    请输入验证码"
            android:paddingLeft="15dp"
            android:inputType="number"
            android:maxLength="6"
            android:textColor="@color/text"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/txt_get_verification"
            android:layout_width="124dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="@string/getVerification"
            android:textColor="@color/white"
            android:textSize="14dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/text_ghphone"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="14sp"
        android:background="@drawable/auth_submit_shape"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:text="更换手机号"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp" />


</LinearLayout>